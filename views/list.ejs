<%- include('../layouts/header') %>

<div class="container">
    <div style="text-align: center;"> <h3><b>ALL DATA </b> </h3>  </div>
    <% if(success.length) {%>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Hey!!!</strong> <%= success %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% } %>
  
        <% if(error.length) {%>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Hey !!!</strong> <%= error %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
            <% } %>

    <a href="/add" class="btn btn-info">Add Data</a>
    <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Image</th>
            <th scope="col">Document</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Age</th>
            <th colspan="2">Action</th>
          </tr>
          <% all_data.map(data => { %>
            <tr>
              <td> <img src="/uploads/my_images/<%= data.image %>" width="120" height="120"> </td>
              <td> <embed src="/uploads/my_documents/<%= data.document %>" type="application/pdf" width="120" height="120" >  </td>
               <!-- <a href="/uploads/my_documents/<%= data.document %>" type="application/pdf"  > </a>   -->
              
              
              
              <td><%=  data.name %> </td>
              <td><%=  data.email %> </td>
              <td><%=  data.age %> </td>
              
              <td><a href="/edit/<%= data._id %>" class="btn btn-success">Edit</a></td>
              <td><a href="/delete/<%= data._id %>" class="btn btn-danger">Delete</a></td>
            </tr>
          <% }) %>
        </thead>
        </tbody>
      </table>
</div>



<%- include('../layouts/footer') %>